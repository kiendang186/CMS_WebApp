@model CMS_WebApp.Areas.ad.DTO.EmployeeDTO
@{
    ViewBag.Title = "Thông tin chi tiết nhân sự";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2></h2>
                <ol>
                    <li><a href="/">Trang chủ</a></li>
                    <li><a href="/co-cau-to-chuc">Cơ cấu Tổ chức</a></li>
                    <li>@Model.FullName</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="col-lg-8">
                    <article class="article">
                        <h4>@Model.Degree. @Model.FullName (@Model.Position)</h4>
                        <div class="emp-info">
                            <div class="emp-img">
                                <img src="@Model.ImagePath" />
                            </div>
                            <div class="emp-detail">
                                <p><span>Chức vụ:</span> <strong>@Model.Position</strong></p>
                                <p><span>Học vị:</span> <strong>@Model.Degree</strong></p>
                                <p><span>Ngày sinh:</span> <strong>@Model.DOB</strong></p>
                                <p><span>Quê quán:</span> <strong>@Model.POB</strong></p>
                                <p><span>Email:</span> <strong>@Model.Email</strong></p>
                            </div>
                        </div>
                        <div class="emp-bio">
                            @Html.Raw(Model.Biography)
                        </div>
                    </article>
                </div>
                <div class="col-lg-4 blog-aside">
                    <!-- Latest Announcement -->
                    @{ Html.RenderAction("RecentAnouncements", "Blog"); }
                    <!-- End Latest Announcement -->
                    <!-- Latest Post -->
                    @{ Html.RenderAction("RecentPosts", "Blog"); }
                    <!-- End Latest Post -->
                </div>
            </div>
        </div>
    </section><!-- End Blog Section -->

</main>

