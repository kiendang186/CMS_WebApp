
@{
    ViewBag.Title = "Thêm bài viết | Trung tâm Thực hành - Thí nghiệm";
    Layout = "~/Areas/ad/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Thêm bài viết
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="@Url.Action("Index","Post")"><i class="fa fa-dashboard"></i> Bài viết</a></li>
        <li class="active">Thêm bài viết</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <p class="text-success">* Bắt buộc</p>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form id="add-post-form" role="form">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="title">Tiêu đề *</label>
                            <span class="help-block">(Không quá 200 ký tự)</span>
                            <input type="text" class="form-control" id="title" name="title" placeholder="Nhập tiêu đề">
                        </div>
                        <div class="form-group">
                            <label for="excerpt">Nội dung tóm tắt*</label>
                            <span class="help-block">(Không quá 500 ký tự)</span>
                            <textarea class="form-control" id="excerpt" name="excerpt" placeholder="Nhập nội dung tóm tắt" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="content">Nội dung chi tiết</label>
                            <textarea class="form-control" id="content" name="content" placeholder="Nhập nội dung chi tiết" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <span class="help-block">&nbsp;</span>
                            <label for="category">Thể loại bài viết *</label>
                            @Html.DropDownList("category", (IEnumerable<SelectListItem>)ViewData["Categories"], new { id = "category", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="enable">Trạng thái</label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="enable" checked id="show" value="true">
                                    Hiển thị
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="enable" id="hide" value="false">
                                    Ẩn
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="imgfile">Chọn ảnh đại diện *</label>
                            <span class="help-block">(Kích thước: 500x400, dung lượng file không quá 1MB)</span>
                            <input type="file" id="imgfile" name="imgfile" class="form-control" onchange="onFileChange(this)">
                        </div>
                        <p>
                            <img id="photoPreview" src="/Areas/ad/Upload/no-image.png" alt="Ảnh đại diện" style="width: 200px; height: 200px; border: 1px solid #dddddd; margin-top: 10px" />
                        </p>
                        
                        <div class="form-group">
                            <label for="imgfile">Chọn file đính kèm</label>
                            <span class="help-block">(Dung lượng file Không quá 10MB)</span>
                            <input type="file" id="attachfile" name="attachfile" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Tạo mới</button>&nbsp;&nbsp;&nbsp;
                <a href="@Url.Action("Index", "Post")" class="btn btn-default">Trở lại danh sách</a>
            </div>
        </form>
    </div>
    @Html.Partial("~/Areas/ad/Views/Shared/_ErrorDialog.cshtml")
    @Html.Partial("~/Areas/ad/Views/Shared/_InfoDialog.cshtml")
    @Html.Partial("~/Areas/ad/Views/Shared/_GalleryDialog.cshtml")
</section>
@section scripts{    
    <script src='~/CoreOET/tinymce/tinymce.min.js'></script>
    <script src="~/Scripts/admins/mce.js"></script>
    <script src="~/Scripts/admins/notify.js"></script>
    <script src="~/Scripts/admins/change_img_file.js"></script>
    <script src="~/Scripts/additional-methods.min.js"></script>
    <script src="~/Scripts/admins/add_post.js"></script>
}

