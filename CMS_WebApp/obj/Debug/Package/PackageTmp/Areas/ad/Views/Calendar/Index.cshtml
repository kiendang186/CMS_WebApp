
@{
    ViewBag.Title = "Đăng ký lịch | Trung tâm Thực hành - Thí nghiệm";
    Layout = "~/Areas/ad/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Đăng ký lịch
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">Đăng ký lịch</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-body">
            <div id="calender"></div>
        </div>
    </div>

    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><span id="eventTitle"></span></h4>
                </div>
                <div class="modal-body">
                    <button id="btnDelete" class="btn btn-default btn-sm pull-right">
                        <span class="glyphicon glyphicon-remove"></span> Xóa
                    </button>
                    <button id="btnEdit" class="btn btn-default btn-sm pull-right" style="margin-right:5px;">
                        <span class="glyphicon glyphicon-pencil"></span> Cập nhật
                    </button>
                    <p id="pDetails"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <div id="myModalSave" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thêm lịch trình</h4>
                </div>
                <div class="modal-body">
                    <form id="event-form">
                        <input type="hidden" id="hdEventID" value="0" />
                        <span id="validation-error" class="text-danger"></span>
                        <div class="form-group">
                            <label>Tiêu đề *</label>
                            <input type="text" id="txtSubject" class="form-control" />
                            <span id="txtSubject-error" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Bắt đầu</label>
                            <div class="input-group date" id="dtp1">
                                <input type="text" id="txtStart" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            <span id="txtStart-error" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label><input type="checkbox" id="chkIsFullDay" checked="checked" />  Cả ngày</label>
                            </div>
                        </div>
                        <div class="form-group" id="divEndDate" style="display:none">
                            <label>Kết thúc</label>
                            <div class="input-group date" id="dtp2">
                                <input type="text" id="txtEnd" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            <span id="txtEnd-error" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Chọn địa điểm *</label>
                                    <select id="selectLocation" class="form-control"></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Chọn phòng *</label>
                                    <select id="selectRoom" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Ghi chú</label>
                            <textarea id="txtDescription" rows="3" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Chọn màu</label>
                            <select id="ddThemeColor" class="form-control">
                                <option value="">Mặc định</option>
                                <option value="red">Đỏ</option>
                                <option value="blue">Xanh dương</option>
                                <option value="black">Đen</option>
                                <option value="green">Xanh lá</option>
                            </select>
                        </div>
                        <button type="button" id="btnSave" class="btn btn-primary">Lưu thay đổi</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("~/Areas/ad/Views/Shared/_ErrorDialog.cshtml");
</section>
<link href="~/Content/calendar/fullcalendar.min.css" rel="stylesheet" />
<link href="~/Content/calendar/fullcalendar.print.css" rel="stylesheet" media="print" />
<link href="~/Content/calendar/bootstrap-datetimepicker.min.css" rel="stylesheet" />
@section scripts{
    <script src="~/Content/calendar/moment.min.js"></script>
    <script src="~/Content/calendar/fullcalendar.min.js"></script>
    <script src="~/Content/calendar/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/admins/notify.js"></script>
    <script src="~/Scripts/admins/common_notify.js"></script>
    <script src="~/Scripts/admins/calendar.js"></script>
}
