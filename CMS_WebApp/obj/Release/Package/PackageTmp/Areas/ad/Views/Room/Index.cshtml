
@{
    ViewBag.Title = "Phòng học/Thực hành | Trung tâm Thực hành - Thí nghiệm";
    Layout = "~/Areas/ad/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Phòng học/Thực hành
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">Phòng học/Thực hành</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Thêm phòng</h3>
                </div>
                <!-- form start -->
                <form role="form" id="room_form">
                    <div class="box-body">
                        <p>Nhập thông tin vào các trường bên dưới để thêm phòng học/thực hành</p>
                        <p class="text-success">* Bắt buộc</p>
                        <div class="form-group">
                            <label for="name">Tên phòng *</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên thể loại">
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="status" name="status" checked>
                                    <strong>Có thể sử dụng *</strong>
                                </label>
                            </div>                            
                        </div>
                        <div class="form-group">
                            <label for="desc">Ghi chú</label>
                            <textarea class="form-control" rows="3" id="desc" name="desc" placeholder="Nhập ghi chú"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="location">Địa điểm *</label>
                            @Html.DropDownList("location", (IEnumerable<SelectListItem>)ViewData["LocationList"], new { @class = "form-control" })
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" id="button_submit" class="btn btn-primary">Tạo mới</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-8">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Danh sách phòng</h3>
                </div>
                <div class="box-body">
                    <table id="tblRoom" class="table table-striped table-bordered table-hover" role="grid">
                        <thead>
                            <tr>
                                <th>Tên phòng</th>
                                <th>Trạng thái</th>
                                <th>Địa điểm</th>
                                <th>Ghi chú</th>                                
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
            <div class="modal fade" id="delRoomModal" style="display: none;">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                            <h4 class="modal-title">Xác nhận</h4>
                        </div>
                        <div class="modal-body">                            
                            <p>Bạn chắc chắn muốn xóa phòng: <strong id="room_name"></strong>?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Không</button>
                            <button type="button" class="btn btn-primary btnOK">Đồng ý</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
        </div>
    </div>
    @Html.Partial("~/Areas/ad/Views/Shared/_ErrorDialog.cshtml")
</section>
<!-- /.content -->
@section scripts{
    <script src="~/Scripts/admins/notify.js"></script>
    <script src="~/Scripts/admins/common_notify.js"></script>
    <script src="~/Scripts/admins/room.js"></script>
}






