@model List<CMS_WebApp.Areas.ad.DTO.PostDTO>

<div class="widget widget-latest-post">
    <div class="widget-title">
        <h3>Thông tin gần đây</h3>
    </div>
    <div class="widget-body">
        @foreach (var item in Model)
        {
            <div class="latest-post-aside media">
                <div class="lpa-left media-body">
                    <div class="lpa-title">
                        <h5><a href="/bai-viet/@item.MetaTitle-@item.Id">@item.Title</a></h5>
                    </div>
                    <div class="lpa-meta">
                        <a class="name" href="#">
                            @item.Author
                        </a>
                        <a class="date" href="#">
                            @item.Date
                        </a>
                    </div>
                </div>
                <div class="lpa-right">
                    <a href="/blog/p/@item.Id">
                        <img src="@item.ImagePath" title="" alt="400x200">
                    </a>
                </div>
            </div>
        }
    </div>   
</div>
