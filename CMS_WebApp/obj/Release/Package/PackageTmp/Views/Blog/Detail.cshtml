@model CMS_WebApp.Areas.ad.DTO.PostDTO
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2></h2>
                <ol>
                    <li><a href="/">Trang chủ</a></li>
                    <li><a href="/the-loai/@ViewBag.MetaTitle-@ViewBag.CategoryId">@ViewBag.CategoryName</a></li>
                    <li>Nội dung bài viết</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="col-lg-8">
                    <article class="article">
                        <div class="article-title">
                            <h2>@Model.Title</h2>
                            <div class="row info-box">
                                <div class="col-md-6">
                                    <div class="media">
                                        <div class="avatar">                                            
                                            <img src="~/Content/img/default-user.png" title="" alt="">
                                        </div>
                                        <div class="media-body">
                                            <label>@Model.Author</label>
                                            <span>@Model.Date</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    @if (Model.AttachmentFile.Length > 0)
                                    {
                                        <div class="attachment">
                                            <a href="@Model.AttachmentFile"><i class="bi bi-paperclip"></i>@ViewBag.AttachmentFileName</a>
                                        </div>
                                    }
                                </div>
                            </div>

                        </div>
                        <div class="article-excerpt">
                            <p><strong>@Model.Excerpt</strong></p>
                        </div>
                        <div class="article-content">
                           @Html.Raw(Model.Content)
                        </div>
                    </article>
                </div>
                <div class="col-lg-4 blog-aside">
                    <!-- Latest Announcement -->
                    @{ Html.RenderAction("RecentAnouncements", "Blog"); }
                    <!-- End Latest Announcement -->
                    <!-- Latest Post -->
                    @{ Html.RenderAction("RecentPosts", "Blog"); }
                    <!-- End Latest Post -->
                </div>
            </div>
        </div>
    </section><!-- End Blog Section -->

</main><!-- End #main -->
