@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ======= Hero Section ======= -->
<div id="hero-container" class="container">
    <div class="row">
        <div class="col-lg-12">
            @{ Html.RenderAction("Slider", "Home"); }
        </div>        
    </div>
</div>

<!-- Slider Hero -->
<!-- ======= Main Section ======= -->
<main id="main">
    <!-- ========= Calendar Section ============ -->
    <div id="calendar-wrapper" class="container">
        <div class="row">
            <div class="col-lg-4">
                @{ Html.RenderAction("Announcement", "Home"); }
            </div>
            <div class="col-lg-8">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Lịch trình</h3>
                    </div>
                    <div class="box-body">
                        <div id="calendar"></div>
                    </div>
                </div>
            </div>
        </div>        
    </div>
    <!-- End Calendar -->
    <!-- ================ Recent posts Section =========== -->
    <div id="recent-posts-wrap" class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="box sidebar document-list">
                    <h3 class="box-title">Văn bản - Biểu mẫu</h3>
                    @{ Html.RenderAction("Documents", "Home"); }                    
                </div>
            </div>
            <div class="col-lg-8">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Tin tức - Sự kiện</h3>
                    </div>
                    <div class="box-body">
                        @{ Html.RenderAction("RecentPosts", "Home"); }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Recent posts-->

</main><!-- End #main -->
<link href="~/Content/calendar/fullcalendar.min.css" rel="stylesheet" />
<link href="~/Content/calendar/fullcalendar.print.css" rel="stylesheet" media="print" />
<link href="~/Content/calendar/bootstrap-datetimepicker.min.css" rel="stylesheet" />
@section scripts{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Content/calendar/moment.min.js"></script>
    <script src="~/Content/calendar/fullcalendar.min.js"></script>
    <script src="~/Content/calendar/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/admins/calendar_data.js"></script>
}
