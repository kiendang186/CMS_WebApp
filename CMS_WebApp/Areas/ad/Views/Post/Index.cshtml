
@{
    ViewBag.Title = "Bài viết | Trung tâm Thực hành - Thí nghiệm";
    Layout = "~/Areas/ad/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Bài viết
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Bảng điều khiển</a></li>
        <li class="active">Bài viết</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <a class="btn btn-sm btn-primary" href="@Url.Action("addpost", "post")"><i class="fa fa-user-plus"></i> Thêm bài viết</a>
        </div>
        <div class="box-body">
            <table id="tblPost" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="width: 0px"></th>
                        <th>Tên bài viết</th>
                        <th>Trạng thái</th>
                        <th>Thể loại</th>
                        <th>Đăng gần nhất</th>
                        <th>Đăng gần nhất bởi</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->

    <div class="modal fade" id="delModal" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Xác nhận</h4>
                </div>
                <div class="modal-body">
                    <p>Bạn chắc chắn muốn xóa bài viết: <strong id="str-title"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Không</button>
                    <button type="button" class="btn btn-primary btnOK">Đồng ý</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    @Html.Partial("~/Areas/ad/Views/Shared/_ErrorDialog.cshtml");
</section>
<!-- /.content -->
@section scripts{
    <script src="~/Scripts/admins/notify.js"></script>
    <script src="~/Scripts/admins/common_notify.js"></script>
    <script src="~/Scripts/admins/post.js"></script>
}



