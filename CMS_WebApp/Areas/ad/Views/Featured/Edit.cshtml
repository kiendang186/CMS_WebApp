
@{
    ViewBag.Title = "Cập nhật thông tin nổi bật | Trung tâm Thực hành - Thí nghiệm";
    Layout = "~/Areas/ad/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Cập nhật tin nổi bật
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Bảng điều khiển</a></li>
        <li><a href="@Url.Action("Index","Featured")"><i class="fa fa-dashboard"></i> Thông tin nổi bật</a></li>
        <li class="active">Cập nhật tin nổi bật</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <p class="text-success">* Bắt buộc</p>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form id="edit-fi-form" role="form">
            <div class="box-body">
                <input type="hidden" id="featured_id" name="featured_id" value="@ViewBag.Id"/>
                <div class="form-group">
                    <label for="title">Tiêu đề *</label>
                    <span class="help-block">(Không quá 300 ký tự)</span>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Nhập tiêu đề tin">
                </div>
                <div class="form-group">
                    <label for="desc">Nội dung *</label>
                    <span class="help-block">(Không quá 500 ký tự)</span>
                    <textarea class="form-control" id="desc" name="desc" placeholder="Nhập nội dung" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label for="url">Liên kết</label>
                    <span class="help-block">(Sử dụng dấu # nếu không có liên kết)</span>
                    <input type="text" class="form-control" id="url" name="url" placeholder="Nhập liên kết đến nội dung chi tiết" />
                </div>
                <div class="form-group">
                    <label for="enable">Trạng thái</label>
                    <div class="radio">
                        <label>
                            <input type="radio" name="enable" id="show" value="true">
                            Hiển thị
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="enable" id="hide" value="false">
                            Ẩn
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="imgfile">Chọn ảnh đại diện </label>
                    <span class="help-block">(Kích thước: 800x600, dung lượng file không quá 1MB)</span>
                    <input type="file" id="imgfile" name="imgfile" class="form-control">
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Cập nhật</button>&nbsp;&nbsp;&nbsp;
                <a href="@Url.Action("Index", "Featured")" class="btn btn-default">Trở lại danh sách</a>
            </div>
        </form>
    </div>
    @Html.Partial("~/Areas/ad/Views/Shared/_ErrorDialog.cshtml")
    @Html.Partial("~/Areas/ad/Views/Shared/_InfoDialog.cshtml")
</section>
@section scripts{
    <script src="~/Scripts/admins/notify.js"></script>
    <script src="~/Scripts/additional-methods.min.js"></script>
    <script src="~/Scripts/admins/edit_featured.js"></script>
}

