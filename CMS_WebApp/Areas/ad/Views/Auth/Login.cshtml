@model CMS_WebApp.Areas.ad.Models.LoginModel
@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Đăng nhập | Trung tâm Thực hành - Thí nghiệm</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    @Styles.Render("~/Content/css")
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#">Hệ thống <b>CMS</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <h4 class="text-center text-aqua"><b>Đăng nhập</b></h4>
            <p class="login-box-msg">Vui lòng nhập thông tin đăng nhập để tiếp tục</p>

            @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { onsubmit = "return submitLogin(this);" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên tài khoản" }, autofocus = "autofocus" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control", placeholder = "Mật khẩu" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-md-12 form-group">
                        <span id="loginmsg" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
                    </div>
                    <!-- /.col -->
                </div>
            }

            <a href="@Url.Action("ForgotPassword","Auth")">Quên mật khẩu?</a><br>

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- loading -->
    <div class="overlay-loader">
        <div class="loader"></div>
    </div>
    @Html.Partial("~/Areas/ad/Views/Shared/_ErrorDialog.cshtml")
    <!-- javascript -->
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/admins/account.js"></script>
</body>
</html>

