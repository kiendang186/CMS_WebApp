
@{
    ViewBag.Title = "Thêm mới Nhân sự | Trung tâm Thực hành - Thí nghiệm";
    Layout = "~/Areas/ad/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Thêm mới Nhân sự</h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Bảng điều khiển</a></li>
        <li><a href="@Url.Action("Index","Employee")">Quản lý Nhân sự</a></li>
        <li class="active">Thêm mới</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <form id="frm-emp">
        <div class="box">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <h4>Ảnh đại diện</h4>
                        <p style="text-align:center">
                            <img id="photoPreview" class="img-responsive img-thumbnail" src="~/Areas/ad/Upload/img-emp/default-user.png" alt="no-image" style="width:150px; height: 180px">
                        </p>
                        <div class="form-group">
                            <span class="help-block">(Kích thước: 150x180, dung lượng file không quá 1MB)</span>
                            <input type="file" id="fileimage" name="fileimage" />
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Thông tin cơ bản</h4>
                                <p class="text-success">* Bắt buộc</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fullname">Họ tên *</label>
                                    <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Nhập họ tên">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="position">Chức vụ *</label>
                                    <input type="text" class="form-control" id="position" name="position" placeholder="Nhập chức vụ">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="degree">Học vị *</label>
                                    <input type="text" class="form-control" id="degree" name="degree" placeholder="Nhập học vị">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email">Email *</label>
                                    <input type="text" class="form-control" id="email" name="email" placeholder="Nhập email">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Ngày sinh * (Ngày/Tháng/Năm)</label>
                                    <div class="input-group date" id="dtp">
                                        <input type="text" id="dob" name="dob" class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">Quê quán</label>
                                    <input type="text" class="form-control" id="pob" name="pob" placeholder="Nhập nơi sinh">
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- row 1-->

                <div class="row">
                    <div class="col-md-12">
                        <br />
                        <div class="form-group">
                            <label for="content">Hoạt động khoa học</label>
                            <textarea class="form-control" id="biography" name="biography"></textarea>
                        </div>
                    </div>
                </div>

            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-sm btn-primary">Tạo mới</button>&nbsp;&nbsp;
                <a class="btn btn-sm btn-default" href="@Url.Action("Index","Employee")">Trở về danh sách</a>
            </div>
        </div>
    </form>
    @Html.Partial("~/Areas/ad/Views/Shared/_ErrorDialog.cshtml")
    @Html.Partial("~/Areas/ad/Views/Shared/_InfoDialog.cshtml")
</section>
<link href="~/Content/calendar/bootstrap-datetimepicker.min.css" rel="stylesheet" />

@section scripts{
    <script src="~/Content/calendar/moment.min.js"></script>
    <script src="~/Content/calendar/bootstrap-datetimepicker.min.js"></script>
    <script src='~/CoreOET/tinymce/tinymce.min.js'></script>
    <script src="~/Scripts/admins/notify.js"></script>
    <script src="~/Scripts/admins/common_notify.js"></script>
    <script src="~/Scripts/additional-methods.min.js"></script>
    <script src="~/Scripts/admins/preview_photo.js"></script>
    <script src="~/Scripts/admins/emp.js"></script>
}